@model OnlineStore.Models.PhoneModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-action="AddPhone" method="POST">
    <label asp-for="Brand">Brand:</label>
    <input asp-for="Brand">
    <label asp-for="Model">Model:</label>
    <input asp-for="Model">
    <label asp-for="Price">Price:</label>
    <input asp-for="Price" type="number" min="0.00" max="10000.00" step="0.01">
    <button type="submit">Add</button>
</form>

